{
  "name": "movies-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "set NODE_ENV=development && mocha --exit",
    "dev": "set DEBUG=app:* && set NODE_ENV=development && nodemon index",
    "start": "set NODE_ENV=production && node index",
    "cover": "nyc npm run test",
    "report": "nyc report --reporter=html && start coverage/index.html",
    "generate-movies": "set DEBUG=app:* && set NODE_ENV=development && node scripts/mongo/seedMovies.js",
    "generate-users": "set DEBUG=app:* && set NODE_ENV=development && node scripts/mongo/seedUsers.js",
    "generate-api-keys": "set DEBUG=app:* && set NODE_ENV=development && node scripts/mongo/seedApiKeys.js"
  },
  "keywords": [],
  "author": "Hector Vasquez",
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^8.0.1",
    "@hapi/joi": "^16.1.8",
    "bcrypt": "^3.0.8",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.3",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^3.5.5",
    "multer": "^1.4.2",
    "passport": "^0.4.1",
    "passport-http": "^0.3.0",
    "passport-jwt": "^4.0.0"
  },
  "devDependencies": {
    "chalk": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "mocha": "^6.2.2",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "proxyquire": "^2.1.3",
    "sinon": "^8.1.1",
    "supertest": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "nyc": {
    "all": true,
    "include": [
      "routes",
      "services",
      "lib",
      "utils"
    ]
  }
}
